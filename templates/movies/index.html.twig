{% extends 'base.html.twig' %} 

{% block title %}Hello MoviesController!{% endblock %}

{% block stylesheets %}
<style>
    #movies-list {
     
      
        
    }
    
    .card {
        align-items: center;
        border-radius:10px;
        margin-top: 10px;
    }

    h1 {
        margin-top: 50Px;
        margin-bottom: 50px;
        text-align: center;

    }
        
</style>

{% endblock %}



{% block body %}

<div class="container">
    <h1>Liste des films</h1>

    <div class="row">
        {% for movie in movies %}
            <div id="movies-list" class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ movie.cover }}" class="card-img-top" alt="...">
                    <div class="card-body">
                    <h5 class="card-title"> {{ movie.name }}</h5>
                    <p class="card-text">
                        {% for category in movie.category %} 
                            {{ category.name }} 
                        {% endfor %}
                    </p>
                    <a href="#" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>
                
                
                
                    
            </div>
        {% endfor %}

    </div>

</div>
{% endblock %}